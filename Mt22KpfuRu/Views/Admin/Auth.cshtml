@{
    ViewData["Title"] = "Вход в систему";
    ViewData["footer"] = true;
}

<div class="color-wrap h-100">
    <div class="container h-100 pt-2 pb-3">
        <div class="row justify-content-md-center align-items-center h-100">
            <div class="col-md-5 mb-5">
                <form method="post">
                    <div class="mb-2">
                        <label class="form-label text-light">Логин:</label>
                        <input class="form-control" type="text" name="login">
                    </div>
                    <div class="mb-3">
                        <label class="form-label text-light">Пароль:</label>
                        <input class="form-control" type="password" name="password">
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn btn-primary">Войти</button>
                </form>
            </div>
        </div>
    </div>
</div>