@model Date
@{
    ViewData["Title"] = "Создание ключевой даты";
    ViewData["footer"] = true;
}
<link rel="stylesheet" href="~/css/FormStyle.min.css" asp-append-version="true">

<div class="color-wrap h-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <form method="post" class="col-lg-6 col-md-8 col-sm-12 round bg-primary-special pt-2 pb-4">
                <h2 class="text-center text-light">@ViewData["Title"]</h2>
                <hr class="text-light">
                <div class="mb-1">
                    <label class="form-label text-light" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-1">
                    <label class="form-label text-light" asp-for="DateTime"></label>
                    <input class="form-control" asp-for="DateTime">
                    <span class="text-danger" asp-validation-for="DateTime"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label text-light" asp-for="ShowTime"></label>
                    <select class="form-select" asp-for="ShowTime">
                        <option value="true">ДД.ММ.ГГГГ ЧЧ:ММ</option>
                        <option value="false">ДД.ММ.ГГГГ</option>
                    </select>
                    <span class="text-danger" asp-validation-for="ShowTime"></span>
                </div>
                <button class="btn btn-success w-100">Создать</button>
            </form>
        </div>
    </div>
</div>


@section Scripts
    {
    <partial name="_ValidationScriptsPartial">
    }
