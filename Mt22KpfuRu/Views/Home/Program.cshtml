@if (admin)
{
    //Это на будущее для создания + редактирования, пока отключено
    @section Scripts
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script></script>
    }

    @Html.AntiForgeryToken()

    <div class="modal fade" id="CreateModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Расширение программы конференции</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input id="Create-Counter" hidden>
                    <div class="mb-1">
                        <label class="form-label">Дата мероприятия</label>
                        <input class="form-control" type="date" id="Create-Date" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Время начала</label>
                        <input class="form-control" type="time" id="Create-Time1" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Время конца</label>
                        <input class="form-control" type="time" id="Create-Time2" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Название</label>
                        <textarea class="form-control w-100" id="Create-Name"></textarea>
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Место проведения</label>
                        <textarea class="form-control w-100" id="Create-Place"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" data-bs-toggle="tooltip" data-bs-title="Нажмите, чтобы вернуться к таблице">Отменить</button>
                    <button type="button" onclick="Create()" class="btn btn-success" data-bs-toggle="tooltip" data-bs-title="Нажмите, чтобы применить изменения">Добавить</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="EditModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="false">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Изменение программы конференции</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input id="Edit-Counter" hidden>
                    <input id="Edit-Id" hidden>
                    <div class="mb-1">
                        <label class="form-label">Дата мероприятия</label>
                        <input class="form-control" type="date" id="Edit-Date" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Время начала</label>
                        <input class="form-control" type="time" id="Edit-Time1" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Время конца</label>
                        <input class="form-control" type="time" id="Edit-Time2" />
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Название</label>
                        <textarea class="form-control w-100" id="Edit-Name"></textarea>
                    </div>
                    <div class="mb-1">
                        <label class="form-label">Место проведения</label>
                        <textarea class="form-control w-100" id="Edit-Place"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" data-bs-toggle="tooltip" data-bs-title="Нажмите, чтобы вернуться к таблице">Отменить</button>
                    <button type="button" onclick="Edit()" class="btn btn-success" data-bs-toggle="tooltip" data-bs-title="Нажмите, чтобы применить изменения">Добавить</button>
                </div>
            </div>
        </div>
    </div>
}